<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.fast.lbcs.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ServiceListActivity"
            android:label="@string/title_activity_service_list" >
        </activity>
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name=".MapShow"
            android:label="@string/title_activity_map_show" >
        </activity>
        <activity
            android:name=".WelcomeUser"
            android:label="@string/title_activity_welcome_user" >
        </activity>

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".ReviewItem"
            android:label="@string/title_activity_review_item" >
        </activity>
        <activity
            android:name=".AddProductActivity"
            android:label="@string/title_activity_add_product"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".SendNotificationActivity"
            android:label="@string/title_activity_send_notification" >
        </activity>
        <activity
            android:name=".ProductDetail"
            android:label="@string/title_activity_product_detail" >
        </activity>
        <activity
            android:name=".ProductDetailTabbedActivity"
            android:label="@string/title_activity_product_detail_tabbed" >
        </activity>
        <activity
            android:name=".Comments"
            android:label="@string/title_activity_comments" >
        </activity>
    </application>

</manifest>